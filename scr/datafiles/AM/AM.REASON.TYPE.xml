<?xml version="1.0" encoding="utf-8"?>
<t24help>
<header>
<product>AM</product>
<table>AM.REASON.TYPE</table>
</header>
<overview>
<ovdesc>

            <p>This application holds the reason type for approval/rejection of a position or trade.</p>
        </ovdesc>
<ovimage></ovimage>
</overview>
<menu>
<t>
<field>SHORT.DESCRIPTION</field>
<desc>
            <p>Holds a short description of reason type.</p>
            <p>Validation Rules:</p>
            <p>Alpha numeric</p>
        </desc>
</t>
<t>
<field>DESCRIPTION</field>
<desc>
            <p>Holds description for every reason type.</p>
            <p>Allows to enter description in various languages.</p>
            <p>Validation Rules:</p>
            <p>Alpha numeric</p>
        </desc>
</t>
<t>
<field>REASON.CODE</field>
<desc>
            <p>Holds the Id of the application.</p>
            <p>Validation Rules:</p>
            <p>maximum of 5 characters</p>
            <p>Alpha numeric</p>
        </desc>
</t>
<t>
<field>REASON.TYPE</field>
<desc>
            <p>Holds the reason type.</p>
            <p>Holds values using EB.LOOKUP application.</p>
            <p>Validation Rules:</p>
            <p>Alphabetic</p>
        </desc>
</t>
</menu>
</t24help>

